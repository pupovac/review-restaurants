{
  "name": "communication-management",
  "version": "1.0.0",
  "description": "C4PNG Communication management",
  "main": "app.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node app.js",
    "local": "cross-env NODE_ENV=local ts-node-dev -P tsconfig.json app.ts",
    "build": "npm run build-ts",
    "watch-ts": "tsc -w -p ./tsconfig.json",
    "build-ts": "tsc -p ./tsconfig.json",
    "watch-node": "nodemon ./dist/app.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npm run build-ts && cross-env NODE_ENV=local mocha './dist/**/*.spec.js'"
  },
  "keywords": [
    "communication-management",
    "microservice",
    "microservices"
  ],
  "author": "Devoteam",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/pubsub": "2.6.0",
    "@typegoose/typegoose": "7.4.2",
    "@types/i18n": "0.8.8",
    "@types/lodash": "4.14.165",
    "@types/mongoose-paginate-v2": "1.3.8",
    "@types/sinon-chai": "3.2.5",
    "axios": "0.21.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "1.19.0",
    "c4p-logging": "1.0.52",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-validator": "6.7.0",
    "i18n": "0.13.2",
    "inversify": "5.1.1",
    "inversify-express-utils": "6.3.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "4.17.21",
    "mongoose": "5.10.16",
    "mongoose-paginate-v2": "1.3.11",
    "querystring": "0.2.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "1.19.0",
    "@types/chai": "4.2.14",
    "@types/cors": "2.8.8",
    "@types/express": "4.17.9",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "8.0.4",
    "@types/mongodb": "3.6.12",
    "@types/mongoose": "5.10.1",
    "@types/sinon": "7.5.2",
